{
  "version": "4.0.0",
  "name": "postcss-variables-loader",
  "description": "Share variables between CSS and JS with Webpack + HMR",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "keywords": [
    "css2js",
    "css4",
    "cssnext",
    "postcss",
    "postcss-plugin",
    "webpack",
    "webpack-loader"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coobaha/postcss-variables-loader"
  },
  "scripts": {
    "audit": "nsp check package",
    "build": "babel -d ./ ./src",
    "check": "npm run audit",
    "coverage": "nyc --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "eslint src test",
    "test": "ava --require babel-core/register -T 7s test/index.js",
    "validate": "npm run lint && npm test",
    "prepare": "npm run build && npm run validate && npm run check"
  },
  "author": {
    "name": "Alexander Ryzhikov",
    "email": "coobaha@gmail.com",
    "url": "https://github.com/coobaha"
  },
  "pre-commit": [
    "validate"
  ],
  "dependencies": {
    "loader-utils": "^0.2.16",
    "lodash": "^4.17.4",
    "postcss": "^6.0.8",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "memory-fs": "^0.4.1",
    "nsp": "^2.6.3",
    "nyc": "^11.0.3",
    "pre-commit": "^1.1.3",
    "webpack": "^3.3.0",
    "webpack-to-memory": "^1.0.0"
  }
}
